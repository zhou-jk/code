{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "g++.exe build active file",
            "command": "C:/Compiler/MinGW64/bin/g++.exe",
            "args": [
                "-std=c++98",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/Compiler/MinGW64/bin"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "shell",
            "label": "debug_copy",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "cmd",
            "args": [
                "/c",
                "copy",
                "${fileBasename}",
                "${workspaceFolder}\\.debug\\${fileBasename}",
                "/y",
                "&code",
                "${workspaceFolder}\\.debug\\${fileBasename}"
            ]
        },
        {
            "type": "shell",
            "label": "debug_clean",
            "command": "cmd",
            "args": [
                "/c",
                "del",
                "/q",
                "${workspaceFolder}\\.debug"
            ]
        },
        {
            "type": "shell",
            "group": "build",
            "label": "g++asm",
            "command": "cmd",
            "args": [
                "/c",
                "g++",
                "-std=c++98",
                "-g",
                "-S",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "${relativeFile}",
                "-o",
                "${relativeFile}/../${fileBasenameNoExtension}1.S",
                "&g++",
                "-std=gnu++98",
                "-g",
                "-c",
                "-Wa,-adlhn",
                "${relativeFile}",
                "-o",
                "${relativeFile}/../${fileBasenameNoExtension}.o",
                ">",
                "${relativeFile}/../${fileBasenameNoExtension}3.S",
                "&objdump",
                "-g",
                "-S",
                "${relativeFile}/../${fileBasenameNoExtension}.o",
                "-l",
                ">",
                "${relativeFile}/../${fileBasenameNoExtension}2.S"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "type": "shell",
            "group": "build",
            "label": "clang++dbg",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "clang++",
            "args": [
                "--target=x86_64-w64-mingw",
                "-std=c++98",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-v",
                "-H",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "type": "shell",
            "group": "build",
            "label": "clang++",
            "command": "clang++",
            "args": [
                "--target=x86_64-w64-mingw",
                "-std=c++98",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "${relativeFile}",
                "-o",
                "${relativeFile}/../${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "type": "shell",
            "group": "build",
            "label": "clang++asm",
            "command": "clang++",
            "args": [
                "--target=x86_64-w64-mingw",
                "-std=c++98",
                "-S",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "${relativeFile}",
                "-o",
                "${relativeFile}/../${fileBasenameNoExtension}.S"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}